{% extends 'base.html.twig' %}

{% block title %}Parents index{% endblock %}

{% block body %}
    <h1>Parents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parent in parents %}
            <tr>
                <td>{{ parent.id }}</td>
                <td>{{ parent.nom }}</td>
                <td>{{ parent.prenom }}</td>
                <td>{{ parent.email }}</td>
                <td>{{ parent.telephone }}</td>
                <td>{{ parent.adresse }}</td>
                <td>
                    <a href="{{ path('parents_show', {'id': parent.id}) }}" class="btn btn-primary"style="padding-right: 50px; box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);" ><i style="padding-right: 10px;"class="fa fa-search-plus" aria-hidden="true"></i>show</a>
                    <a href="{{ path('parents_edit', {'id': parent.id}) }}"class="btn btn-warning" style="padding-right: 50px; box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);"><i style="padding-right: 10px;" class="fa fa-pencil-square-o" aria-hidden="true"></i>edit</a>





                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parents_new') }}" style=" background:#004466; font-size:16px; padding: 10px 27px 10px 45px;
    font-weight: 600;color: #ffffff;  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);" 
      type="submit" class"btn btn-success"><i class="fa fa-plus"  style="padding-right: 10px;" aria-hidden="true"></i>Create new</a>
{% endblock %}
