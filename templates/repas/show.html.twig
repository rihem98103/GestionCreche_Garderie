{% block title %}Repas{% endblock %}

{% block body %}
    <h1>Repas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repa.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ repa.date ? repa.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ repa.jour ? repa.jour|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ repa.quantite }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ repa.heure ? repa.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ repa.libelle }}</td>
            </tr>
