{% extends 'base.html.twig' %}

{% block title %}Siestes index{% endblock %}

{% block body %}
    <h1>Siestes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heurededebut</th>
                <th>Heurededormir</th>
                <th>Qualite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sieste in siestes %}
            <tr>
                <td>{{ sieste.id }}</td>
                <td>{{ sieste.date ? sieste.date|date('Y-m-d') : '' }}</td>
                <td>{{ sieste.heurededebut ? sieste.heurededebut|date('H:i:s') : '' }}</td>
                <td>{{ sieste.heurededormir ? sieste.heurededormir|date('H:i:s') : '' }}</td>
                <td>{{ sieste.qualite }}</td>
                <td>
                    <a href="{{ path('siestes_show', {'id': sieste.id}) }}">show</a>
                    <a href="{{ path('siestes_edit', {'id': sieste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('siestes_new') }}">Create new</a>
{% endblock %}
